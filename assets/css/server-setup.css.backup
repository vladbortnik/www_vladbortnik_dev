/* Header container adjustments */
#header .container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
  padding: 15px 20px;
}

/* Pill/Rounded Project Badge */
.project-badge.pill {
  background-color: #ff5722; /* Orange */
  color: white;
  border-radius: 25px;
  padding: 6px 16px;
  font-weight: 600;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-right: 20px;
  box-shadow: 0 2px 5px rgba(255, 87, 34, 0.3);
}

.project-badge.pill span {
  display: inline-block;
}

/* Project Title */
.project-title {
  flex-grow: 1;
}

.project-title a {
  color: white;
  font-size: 18px;
  font-weight: 500;
  text-decoration: none;
  transition: color 0.3s;
}

.project-title a:hover {
  color: #ff5722;
  /* color: rgba(255, 255, 255, 0.8); */
}

/* Back to Portfolio link */
.back-to-portfolio {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  display: flex;
  align-items: center;
  margin-left: auto;
  font-size: 14px;
  transition: color 0.3s;
}

.back-to-portfolio i {
  margin-right: 5px;
}

.back-to-portfolio:hover {
  color: #ff5722; /* Orange hover */
}

/* Responsive adjustments */
@media (max-width: 768px) {
  #header .container {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .project-badge.pill {
    margin-bottom: 10px;
    align-self: flex-start;
  }
  
  .project-title {
    margin-bottom: 10px;
    width: 100%;
  }
  
  .back-to-portfolio {
    margin-left: 0;
    margin-bottom: 15px;
  }
}

