  width: 100%;
  border-radius: 8px;
  transition: transform 0.3s ease;
  cursor: pointer;
}

.gallery-item:hover img {
  transform: scale(1.02);
}

.caption {
  color: #18d26e;
  padding: 0.5rem 0 0.5rem 0.5rem;
  font-size: 0.9rem;
}

