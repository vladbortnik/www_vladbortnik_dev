/* Floating Return Button */
.floating-return-btn {

  /* Option 1: Top-Left Position */
  position: fixed;
  top: 90px;
  left: 30px;

  /* Option 2: Bottom-Right Position */
  /* position: fixed;
  bottom: 30px;
  right: 30px; */
  /* END ======== */

  background-color: rgba(0, 123, 255, 0.9); /* Blue with slight transparency */
  color: white;
  padding: 6px 10px;
  border-radius: 25px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  z-index: 999;
  display: flex;
  align-items: center;
  font-size: 0.8rem;
  gap: 4px;
  text-decoration: none;
  transition: all 0.3s ease;
  font-weight: 500;

  /* OPTION: Animated Appear on Scroll. 
  backref: line 356 in server-setup.js */
  opacity: 0;
  visibility: hidden;
  transition: opacity 1s, visibility 1s, transform 1s;
}

.floating-return-btn.visible {
  /* opacity: 1; */
  visibility: visible;
}/* END: Animated Appear on Scroll. */

.floating-return-btn:hover {
  background-color: rgba(0, 123, 255, 1);
  transform: translateY(-3px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
  color: white;
  text-decoration: none;
}

.floating-return-btn i {
  font-size: 0.9rem;
}

/* For mobile devices */
@media (max-width: 768px) {
  .floating-return-btn {
    top: 65px;
    left: 15px;
    padding: 5px 8px;
  }
  
  .floating-return-btn span {
    display: none; /* Hide text on mobile, show only icon */
  }
  
  .floating-return-btn i {
    font-size: 0.9rem;
    margin: 0;
  }
}



