/*    INTERACTIVE HOTSPOTS      */
/* ---------------------------- */
.hotspot-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.hotspot {
  position: absolute;
  pointer-events: auto;
  cursor: pointer;

  /* background-color: #18d26e; */
  /* opacity: 0.5; */
  background: transparent;
  
  transition: all 0.3s ease;
}

/* POPUP STYLING */
.hotspot-popup {
  position: absolute;
  visibility: hidden;
  opacity: 0;
  background: rgba(0, 0, 0, 0.95);
  border: 1px solid #18d26e;
  border-radius: 8px;
  padding: 15px;
  min-width: 200px;
  max-width: 300px;
  z-index: 100;
  transition: all 0.3s ease;
  pointer-events: none;
  white-space: nowrap;
}

.popup-left {
  right: calc(100% + 10px);
  top: 50%;
  transform: translateY(-50%);
}

.popup-right {
  left: calc(100% + 10px);
  top: 50%;
  transform: translateY(-50%);
}

.popup-top {
  bottom: calc(100% + 10px);
  left: 50%;
  transform: translateX(-50%);
}

.popup-bottom {
  top: calc(100% + 10px);
  left: 50%;
  transform: translateX(-50%);
}

/* Show popup on hover */
.hotspot:hover .hotspot-popup {
  visibility: visible;
  opacity: 1;
}

.hotspot-popup h5 {
  color: #18d26e;
  margin-bottom: 10px;
  font-size: 1rem;
}

.hotspot-popup ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.hotspot-popup ul li {
  color: #fff;
  margin-bottom: 5px;
  font-size: 0.9rem;
  padding-left: 15px;
  position: relative;
}

.hotspot-popup ul li:before {
  content: "â€¢";
  color: #18d26e;
  position: absolute;
  left: 0;
}

/* Overlay styling */
.diagram-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  opacity: 0;
  /* opacity: 1 !important; */
  transition: opacity 0.3s ease;
  pointer-events: none;
  border-radius: 5px;
}

.hotspot:hover {
  animation: pulse 1.5s infinite;
  z-index: 102;
}

.hotspot:hover ~ .diagram-overlay {
  opacity: 1;
}

.hotspot:hover {
  background: rgba(24, 210, 110, 0.3);
  border-radius: 4px;
  box-shadow: 0 0 15px rgba(24, 210, 110, 0.5);
}

.hotspot-popup {
  z-index: 102;
}

@keyframes pulse {
  0% {
      box-shadow: 0 0 0 0 rgba(24, 210, 110, 0.6);
  }
  70% {
      box-shadow: 0 0 0 10px rgba(24, 210, 110, 0);
  }
  100% {
      box-shadow: 0 0 0 0 rgba(24, 210, 110, 0);
  }
}

